@model UserRegister.Models.IndexViewModel
@using UserRegister.Models;
@using Microsoft.AspNet.Identity;
@using Microsoft.AspNet.Identity.Owin;
@{
    ApplicationUser user = System.Web.HttpContext.Current.GetOwinContext().GetUserManager<ApplicationUserManager>().FindById(User.Identity.GetUserId());
}

<h2>Manage Account</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Change your account settings</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Username</dt>
        <dd>@user.UserName</dd>
        <dt>Name:</dt>
        <dd>@user.FirstName</dd>
        <dt>Last Name:</dt>
        <dd>@user.LastName</dd>
        <dt>Email:</dt>
        <dd>@user.Email</dd>
        <dt>Street:</dt>
        <dd>@user.Street</dd>
        <dt>PostCode:</dt>
        <dd>@user.Postcode</dd>
        <dt>City:</dt>
        <dd>@user.City</dd>
        <dt>Country:</dt>
        <dd>@user.Country</dd>
        <dt>Password:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Change your password", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>
    </dl>
        <a href="@Url.Action("EditProfile", "Manage")" class="btn btn-default">
            <span class="glyphicon glyphicon-pencil " aria-hidden="true"></span>
            Edit
        </a>
</div>
